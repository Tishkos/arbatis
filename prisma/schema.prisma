// Arbati ERP - Prisma Schema
// Production-grade schema with audit fields, indexes, and proper relations

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Authentication & Authorization
// ============================================================================

enum UserStatus {
  PENDING   // Awaiting approval
  ACTIVE    // Can log in
  SUSPENDED // Temporarily disabled
  DELETED   // Soft deleted
}

enum UserRole {
  DEVELOPER
  ADMIN
  EMPLOYEE
  CASHIER
  VIEWER
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  passwordHash  String      // bcrypt hashed
  name          String
  phone         String?
  image         String?     // Profile picture URL
  status        UserStatus  @default(PENDING)
  role          UserRole    @default(VIEWER)
  
  // Audit fields
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  createdById   String?
  updatedById   String?
  
  // Relations
  createdBy     User?       @relation("UserCreatedBy", fields: [createdById], references: [id])
  updatedBy     User?       @relation("UserUpdatedBy", fields: [updatedById], references: [id])
  createdUsers  User[]      @relation("UserCreatedBy")
  updatedUsers  User[]      @relation("UserUpdatedBy")
  
  // Employee relation
  employee      Employee?
  
  // Activity relations
  createdDrafts       Draft[]
  createdSales        Sale[]
  createdInvoices     Invoice[]
  createdProducts     Product[]      @relation("ProductCreatedBy")
  updatedProducts     Product[]      @relation("ProductUpdatedBy")
  createdCustomers    Customer[]     @relation("CustomerCreatedBy")
  createdStockMovements StockMovement[]
  createdActivities   Activity[]     @relation("ActivityCreatedBy")
  
  @@index([email])
  @@index([status])
  @@index([role])
  @@map("users")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  
  // Relations
  permissions RolePermission[]
  employees   EmployeeRole[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("roles")
}

model Permission {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "prices:edit", "invoices:delete"
  description String?
  
  // Relations
  roles       RolePermission[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("permissions")
}

model RolePermission {
  id           String     @id @default(cuid())
  roleId       String
  permissionId String
  
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime   @default(now())
  
  @@unique([roleId, permissionId])
  @@map("role_permissions")
}

// ============================================================================
// Products & Categories
// ============================================================================

model Category {
  id          String    @id @default(cuid())
  name        String
  nameAr      String?   // Arabic name
  nameKu      String?   // Kurdish name
  description String?
  parentId    String?   // For nested categories
  
  // Relations
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]
  
  // Audit
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdById String?
  updatedById String?
  
  @@index([parentId])
  @@index([name])
  @@map("categories")
}

model Product {
  id               String    @id @default(cuid())
  name             String
  nameAr           String?
  nameKu           String?
  sku              String    @unique
  barcode          String?   @unique
  description      String?
  
  // Pricing
  purchasePrice    Decimal   @db.Decimal(10, 2)
  mufradPrice      Decimal   @db.Decimal(10, 2) // Retail price (IQD)
  jumlaPrice       Decimal   @db.Decimal(10, 2) // Wholesale price (IQD)
  rmbPrice         Decimal?  @db.Decimal(10, 2) // RMB price
  defaultTaxRate   Decimal   @default(0) @db.Decimal(5, 2) // Percentage
  
  // Inventory
  stockQuantity    Int       @default(0)
  lowStockThreshold Int      @default(10)
  
  // Image
  image            String?   // Product image URL
  
  // Additional fields
  notes            String?   // Optional notes
  attachment       String?   // Optional attachment URL
  
  // Status
  isActive         Boolean   @default(true)
  
  // Relations
  categoryId       String?
  category         Category? @relation(fields: [categoryId], references: [id])
  
  saleItems        SaleItem[]
  invoiceItems     InvoiceItem[]
  draftItems       DraftItem[]
  stockMovements   StockMovement[]
  
  // Audit
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  createdById      String?
  updatedById      String?
  createdBy        User?     @relation("ProductCreatedBy", fields: [createdById], references: [id])
  updatedBy        User?     @relation("ProductUpdatedBy", fields: [updatedById], references: [id])
  
  @@index([sku])
  @@index([barcode])
  @@index([categoryId])
  @@index([isActive])
  @@index([stockQuantity])
  @@map("products")
}

// ============================================================================
// Motorcycles & Motorcycle Categories
// ============================================================================

model MotorcycleCategory {
  id          String    @id @default(cuid())
  name        String
  nameAr      String?   // Arabic name
  nameKu      String?   // Kurdish name
  description String?
  parentId    String?   // For nested categories
  
  // Relations
  parent      MotorcycleCategory? @relation("MotorcycleCategoryHierarchy", fields: [parentId], references: [id])
  children    MotorcycleCategory[] @relation("MotorcycleCategoryHierarchy")
  motorcycles Motorcycle[]
  
  // Audit
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdById String?
  updatedById String?
  
  @@index([parentId])
  @@index([name])
  @@map("motorcycle_categories")
}

enum MotorcycleStatus {
  IN_STOCK
  RESERVED
  SOLD
  OUT_OF_STOCK
}

model Motorcycle {
  id          String            @id @default(cuid())
  
  // Basic Info - matches current database structure
  name        String
  sku         String            @unique // SKU (shared with products, must be unique)
  
  // Image & Attachments
  image       String?           // Product image URL
  attachment  String?           // Optional attachment URL (can be JSON array)
  
  // Pricing
  usdRetailPrice Decimal        @db.Decimal(10, 2) // USD Retail price (mandatory)
  usdWholesalePrice Decimal     @db.Decimal(10, 2) // USD Wholesale price (mandatory)
  rmbPrice    Decimal?          @db.Decimal(10, 2) // RMB price (optional)
  
  // Inventory
  stockQuantity    Int       @default(0)
  lowStockThreshold Int      @default(10)
  
  // Status
  status      MotorcycleStatus  @default(IN_STOCK)
  
  // Relations
  categoryId  String?           // Optional category
  category    MotorcycleCategory? @relation(fields: [categoryId], references: [id])
  branchId    String?           // For multi-warehouse (future)
  branch      Branch?           @relation(fields: [branchId], references: [id])
  
  notes       String?
  
  // Audit
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  createdById String?
  updatedById String?
  
  @@index([name])
  @@index([status])
  @@index([sku])
  @@index([categoryId])
  @@map("motorcycles")
}

// ============================================================================
// Customers
// ============================================================================

model Address {
  id          String    @id @default(cuid())
  name        String   // Address name (e.g., "Erbil", "Baghdad", "Sulaymaniyah")
  description String?  // Optional description
  
  // Relations
  customers   Customer[]
  
  // Audit
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdById String?
  updatedById String?
  
  @@index([name])
  @@map("addresses")
}

enum CustomerType {
  INDIVIDUAL
  COMPANY
}

model Customer {
  id          String          @id @default(cuid())
  name        String
  nameAr      String?
  phone       String?
  email       String?
  city        String?
  addressId   String?         // Reference to Address model
  address     Address?         @relation(fields: [addressId], references: [id])
  sku         String          @unique // Customer code/SKU
  type        CustomerType    @default(INDIVIDUAL) // Individual or Company
  image       String?         // Customer image URL
  attachment  String?         // JSON array of attachment URLs
  notes       String?
  
  // Debt tracking (separate from balance for clarity)
  debtIqd     Decimal         @default(0) @db.Decimal(12, 2) // Debt in IQD
  debtUsd     Decimal         @default(0) @db.Decimal(12, 2) // Debt in USD
  
  // Balance tracking
  currentBalance Decimal       @default(0) @db.Decimal(12, 2) // Positive = owes, Negative = credit
  
  // Payment tracking
  lastPaymentDate DateTime?    // Last payment date
  daysOverdue     Int          @default(0) // Days since last payment (if debt > 0)
  
  // Notification settings
  notificationDays Int?        // Days threshold for overdue notification (null = disabled)
  notificationType String?     // "partial" or "full" - default "partial"
  
  // Relations
  sales       Sale[]
  invoices    Invoice[]
  drafts      Draft[]
  balanceHistory CustomerBalance[]
  
  // Audit
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  createdById String?
  createdBy   User?           @relation("CustomerCreatedBy", fields: [createdById], references: [id])
  
  @@index([name])
  @@index([phone])
  @@index([city])
  @@index([addressId])
  @@index([currentBalance])
  @@index([sku])
  @@index([daysOverdue])
  @@index([type])
  @@map("customers")
}

model CustomerBalance {
  id          String    @id @default(cuid())
  customerId  String
  customer    Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  amount      Decimal   @db.Decimal(12, 2) // Positive = debit, Negative = credit
  balance     Decimal   @db.Decimal(12, 2) // Balance after this transaction
  description String?
  
  // Reference to related entity
  saleId      String?
  invoiceId   String?
  
  createdAt   DateTime  @default(now())
  
  @@index([customerId])
  @@index([createdAt])
  @@map("customer_balances")
}

// ============================================================================
// Employees
// ============================================================================

model Employee {
  id          String    @id @default(cuid())
  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  employeeNumber String? @unique
  department  String?
  position    String?
  
  // Relations
  roles       EmployeeRole[]
  
  // Audit
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("employees")
}

model EmployeeRole {
  id         String   @id @default(cuid())
  employeeId String
  roleId     String
  
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  role       Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  
  assignedAt DateTime @default(now())
  assignedById String?
  
  @@unique([employeeId, roleId])
  @@map("employee_roles")
}

// ============================================================================
// Drafts System (CRITICAL - First Class Entity)
// ============================================================================

enum DraftStatus {
  CREATED     // Initial state
  AUTOSAVING  // Changes being saved
  READY       // Complete and ready
  FINALIZING  // Submission in progress
  FINALIZED   // Converted to sale
  CANCELLED   // User discarded
}

enum SaleType {
  MUFRAD  // Retail
  JUMLA   // Wholesale
}

model Draft {
  id          String        @id @default(cuid())
  
  // Type
  type        SaleType      // MUFRAD or JUMLA
  
  // Status
  status      DraftStatus   @default(CREATED)
  
  // Customer (optional for MUFRAD, required for JUMLA)
  customerId  String?
  customer    Customer?     @relation(fields: [customerId], references: [id])
  
  // Totals (calculated)
  subtotal    Decimal       @default(0) @db.Decimal(12, 2)
  taxAmount   Decimal       @default(0) @db.Decimal(12, 2)
  discount    Decimal       @default(0) @db.Decimal(12, 2) // Invoice-level discount
  total       Decimal       @default(0) @db.Decimal(12, 2)
  
  // Payment info (if applicable)
  paymentMethod String?
  amountPaid    Decimal?    @db.Decimal(12, 2)
  
  // Notes
  notes       String?
  
  // Relations
  items       DraftItem[]
  
  // When finalized, link to sale and invoice
  saleId      String?       @unique
  invoiceId   String?       @unique
  sale        Sale?         @relation(fields: [saleId], references: [id])
  invoice     Invoice?      @relation("DraftInvoice", fields: [invoiceId], references: [id])
  
  // Audit
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  createdById String
  createdBy   User          @relation(fields: [createdById], references: [id])
  finalizedAt DateTime?
  cancelledAt DateTime?
  
  @@index([status])
  @@index([type])
  @@index([customerId])
  @@index([createdById])
  @@index([createdAt])
  @@map("drafts")
}

model DraftItem {
  id          String    @id @default(cuid())
  draftId     String
  draft       Draft     @relation(fields: [draftId], references: [id], onDelete: Cascade)
  
  // Product reference
  productId   String?
  product     Product?  @relation(fields: [productId], references: [id])
  
  // Line item details
  quantity    Int
  unitPrice   Decimal   @db.Decimal(10, 2) // May override product price
  discount    Decimal   @default(0) @db.Decimal(5, 2) // Percentage or fixed
  taxRate     Decimal   @default(0) @db.Decimal(5, 2)
  lineTotal   Decimal   @db.Decimal(12, 2)
  
  // Notes
  notes       String?
  
  // Display order
  order       Int       @default(0)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([draftId])
  @@index([productId])
  @@map("draft_items")
}

// ============================================================================
// Sales
// ============================================================================

enum SaleStatus {
  PENDING
  COMPLETED
  CANCELLED
  REFUNDED
}

model Sale {
  id          String      @id @default(cuid())
  
  // Type
  type        SaleType    // MUFRAD or JUMLA
  
  // Status
  status      SaleStatus  @default(COMPLETED)
  
  // Customer (optional for MUFRAD, required for JUMLA)
  customerId  String?
  customer    Customer?   @relation(fields: [customerId], references: [id])
  
  // Totals
  subtotal    Decimal     @db.Decimal(12, 2)
  taxAmount   Decimal     @db.Decimal(12, 2)
  discount    Decimal     @default(0) @db.Decimal(12, 2)
  total       Decimal     @db.Decimal(12, 2)
  
  // Payment
  paymentMethod String?
  amountPaid    Decimal   @db.Decimal(12, 2)
  amountDue     Decimal   @db.Decimal(12, 2)
  
  // Relations
  items       SaleItem[]
  invoice     Invoice?
  draft       Draft?
  
  // Audit
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  createdById String
  createdBy   User        @relation(fields: [createdById], references: [id])
  cancelledAt DateTime?
  cancelledById String?
  
  @@index([type])
  @@index([status])
  @@index([customerId])
  @@index([createdById])
  @@index([createdAt])
  @@map("sales")
}

model SaleItem {
  id          String    @id @default(cuid())
  saleId      String
  sale        Sale      @relation(fields: [saleId], references: [id], onDelete: Cascade)
  
  productId   String?
  product     Product?  @relation(fields: [productId], references: [id])
  
  quantity    Int
  unitPrice   Decimal   @db.Decimal(10, 2)
  discount    Decimal   @default(0) @db.Decimal(5, 2)
  taxRate     Decimal   @default(0) @db.Decimal(5, 2)
  lineTotal   Decimal   @db.Decimal(12, 2)
  
  notes       String?
  order       Int       @default(0)
  
  createdAt   DateTime  @default(now())
  
  @@index([saleId])
  @@index([productId])
  @@map("sale_items")
}

// ============================================================================
// Invoices
// ============================================================================

enum InvoiceStatus {
  DRAFT
  FINALIZED
  CANCELLED
  PAID
  PARTIALLY_PAID
  OVERDUE
}

model Invoice {
  id          String        @id @default(cuid())
  
  // Numbering (format: INV-YYYY-NNNN)
  invoiceNumber String      @unique
  
  // Status
  status      InvoiceStatus @default(DRAFT)
  
  // Relations
  saleId      String        @unique
  sale        Sale          @relation(fields: [saleId], references: [id])
  
  customerId  String?
  customer    Customer?     @relation(fields: [customerId], references: [id])
  
  draftId     String?       @unique
  draft       Draft?        @relation("DraftInvoice")
  
  items       InvoiceItem[]
  
  // Relations - Activities
  activities  Activity[]
  
  // Totals
  subtotal    Decimal       @db.Decimal(12, 2)
  taxAmount   Decimal       @db.Decimal(12, 2)
  discount    Decimal       @default(0) @db.Decimal(12, 2)
  total       Decimal       @db.Decimal(12, 2)
  amountPaid  Decimal       @default(0) @db.Decimal(12, 2)
  amountDue   Decimal       @db.Decimal(12, 2)
  
  // Dates
  invoiceDate DateTime      @default(now())
  dueDate     DateTime?
  paidAt      DateTime?
  
  // Notes
  notes       String?
  cancellationReason String?
  
  // Audit
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  createdById String
  createdBy   User          @relation(fields: [createdById], references: [id])
  cancelledAt DateTime?
  cancelledById String?
  
  @@index([invoiceNumber])
  @@index([status])
  @@index([customerId])
  @@index([invoiceDate])
  @@index([createdById])
  @@map("invoices")
}

model InvoiceItem {
  id          String    @id @default(cuid())
  invoiceId   String
  invoice     Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  
  productId   String?
  product     Product?  @relation(fields: [productId], references: [id])
  
  quantity    Int
  unitPrice   Decimal   @db.Decimal(10, 2)
  discount    Decimal   @default(0) @db.Decimal(5, 2)
  taxRate     Decimal   @default(0) @db.Decimal(5, 2)
  lineTotal   Decimal   @db.Decimal(12, 2)
  
  notes       String?
  order       Int       @default(0)
  
  createdAt   DateTime  @default(now())
  
  @@index([invoiceId])
  @@index([productId])
  @@map("invoice_items")
}

// ============================================================================
// Stock Management (Audit Trail)
// ============================================================================

enum StockMovementType {
  SALE           // Stock decreased due to sale
  PURCHASE       // Stock increased due to purchase
  ADJUSTMENT     // Manual adjustment
  RETURN         // Customer return
  TRANSFER       // Warehouse transfer (future)
  DAMAGE         // Damaged goods
  LOSS           // Lost/stolen
}

model StockMovement {
  id          String            @id @default(cuid())
  
  productId   String
  product     Product           @relation(fields: [productId], references: [id])
  
  type        StockMovementType
  quantity    Int               // Positive = increase, Negative = decrease
  balanceAfter Int              // Stock quantity after this movement
  
  // References
  saleId      String?
  invoiceId   String?
  adjustmentReason String?
  
  // Audit
  createdAt   DateTime          @default(now())
  createdById String
  createdBy   User              @relation(fields: [createdById], references: [id])
  
  @@index([productId])
  @@index([type])
  @@index([createdAt])
  @@index([saleId])
  @@map("stock_movements")
}

// ============================================================================
// Branches / Warehouses (Future Extension)
// ============================================================================

model Branch {
  id          String        @id @default(cuid())
  name        String
  nameAr      String?
  address     String?
  city        String?
  phone       String?
  isActive    Boolean       @default(true)
  
  // Relations
  motorcycles Motorcycle[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  @@index([isActive])
  @@map("branches")
}

// ============================================================================
// Activity Log (Audit Trail for Products and Motorcycles)
// ============================================================================

enum ActivityType {
  CREATED         // Product/Motorcycle created
  UPDATED         // Product/Motorcycle updated
  STOCK_ADDED     // Stock quantity increased
  STOCK_REDUCED   // Stock quantity decreased
  STOCK_ADJUSTED  // Stock manually adjusted
  PRICE_CHANGED   // Price changed
  IMAGE_CHANGED   // Image updated
  ATTACHMENT_ADDED // Attachment added
  ATTACHMENT_REMOVED // Attachment removed
  CATEGORY_CHANGED // Category changed (products only)
  DELETED         // Product/Motorcycle deleted
  INVOICED        // Product/Motorcycle invoiced
}

enum ActivityEntityType {
  PRODUCT
  MOTORCYCLE
}

model Activity {
  id          String            @id @default(cuid())
  
  // Entity reference
  entityType  ActivityEntityType // PRODUCT or MOTORCYCLE
  entityId    String            // Product or Motorcycle ID
  
  // Activity details
  type        ActivityType
  description String            // Human-readable description of the change
  
  // Change details (JSON)
  changes     Json?             // Detailed changes: { field: { old: value, new: value } }
  
  // Invoice reference (if activity is related to an invoice/sale)
  invoiceId   String?
  invoice     Invoice?          @relation(fields: [invoiceId], references: [id])
  
  // Audit
  createdById String
  createdBy   User              @relation("ActivityCreatedBy", fields: [createdById], references: [id])
  createdAt   DateTime          @default(now())
  
  @@index([entityType, entityId])
  @@index([type])
  @@index([createdAt])
  @@index([createdById])
  @@index([invoiceId])
  @@map("activities")
}

// ============================================================================
// OTP Tokens (Email Authentication)
// ============================================================================

model OtpToken {
  id          String   @id @default(cuid())
  email       String
  token       String   // 6-digit code
  accessToken String?  @unique // Token for accessing OTP page
  expiresAt   DateTime
  used        Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  @@index([email])
  @@index([token])
  @@index([accessToken])
  @@index([expiresAt])
  @@map("otp_tokens")
}

